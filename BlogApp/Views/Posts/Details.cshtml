@model BlogApp.Models.Post

@{
    ViewData["Title"] = "Details";
}


<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <p class="text-muted small mb-2">Created on: @Model.CreatedAt.ToString("dd MMM yyyy, HH:mm")</p>
            <p class="card-text">@Model.Content</p>
        </div>
        <div class="card-footer">
            <a class="btn btn-secondary" asp-action="Index">Back to Posts</a>
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>